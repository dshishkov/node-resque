{
    "extends": [
        "eslint-config-airbnb-base"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "es2020": true
    },
    "rules": {
        "no-global-assign": 0,
        "no-restricted-syntax": 0,
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "max-len": 0,
        "max-lines-per-function": 0,
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "function-call-argument-newline": 0,
        "prefer-const": "off",
        "spaced-comment": "off",
        "padded-blocks": 0,
        "import/no-mutable-exports": "off",
        "object-curly-spacing": ["error", "always"],
        "one-var": ["error", "never"],
        "quote-props": 0,
        "arrow-parens": 0,
        "no-console": ["warn", { "allow": ["trace","warn", "error", "info"] }],
        "import/no-dynamic-require": 0,
        "global-require": 0,
        "no-await-in-loop": 0,
        "no-multi-assign": 0
    },
    "ignorePatterns": ["node_modules/"]
}
